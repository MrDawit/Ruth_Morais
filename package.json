        "@types/date-fns": "^2.6.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.2",
        "bootstrap": "^5.1.3",
        "concurrently": "^7.0.0",
        "cookie-parser": "^1.4.6",
        "core-js": "^3.21.1",
        "cors": "^2.8.5",
        "date-fns": "^2.28.0",
        "dotenv": "^16.0.0",
